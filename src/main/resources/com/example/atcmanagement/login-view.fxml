<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="720.0" prefWidth="1080.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.atcmanagement.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="Login">
      <font>
         <Font name="System Bold" size="24.0" />
      </font></Label>
   <HBox prefHeight="14.0" prefWidth="427.0">
      <children>
         <Label text="Login:">
            <font>
               <Font size="14.0" />
            </font></Label>
      </children>
   </HBox>
   <TextField fx:id="login_box" prefHeight="25.0" prefWidth="646.0">
      <font>
         <Font size="14.0" />
      </font></TextField>
   <HBox prefHeight="12.0" prefWidth="427.0">
      <Label text="Password:">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
   </HBox>
   <PasswordField fx:id="password_box">
      <font>
         <Font size="14.0" />
      </font></PasswordField>

    <Button fx:id="login_btn" onAction="#onLoginButtonClick" prefHeight="29.0" prefWidth="106.0" text="Log in">
      <font>
         <Font name="System Bold" size="14.0" />
      </font></Button>
   <Label fx:id="login_error_lbl" textFill="RED" />
   <Button fx:id="forgot_password_btn" mnemonicParsing="false" onAction="#onForgotPasswordClick" text="Forgot password" />
</VBox>
